<script>

    function loadData() {
        var xAxisData = new Array();
        var data = new Array();
        jQuery.ajax({
            url: "$rc.contextPath/sys/main/info",
            type: "GET",
            dataType: "json",
            async: false,
            success: function (result) {
                if (result.code == 0) {
                    console.log(result.info)
                    $("#alarmCount").text(result.info.alarmCount);
                    $("#lineCount").text(result.info.lineCount);
                    $("#companyCount").text(result.info.companyCount);
                    $("#equipmentCount").text(result.info.equipmentCount);
                    for (var i = 0; i < result.info.mapList.length; i++) {
                        xAxisData.push(result.info.mapList[i].days);
                        data.push(result.info.mapList[i].count);
                    }
                    loadLineChart(xAxisData, data);
                    $("#data_table").html("");
                    if (result.info.alertTable.length == 0) {
                        $("#data_table").append("<tr style='text-align: center'><td colspan=5>没有数据</td></tr>");
                    } else {
                        for (var i = 0; i < result.info.alertTable.length; i++) {
                            var obj = result.info.alertTable[i];
                            var m = eval('(' + obj.info + ')');
                            $("#data_table").append(
                                    "<tr>" +
                                    "<td>" + obj.company + "</td>" +
                                    "<td>" + obj.city + "</td>" +
                                    "<td>" + obj.name + "</td>" +
                                    "<td>" + m.msg + "</td>" +
                                    "<td>" + timestampToTime(obj.create_time) + "</td>" +
                                    "</tr>"
                            );
                        }
                    }
                } else {
                    console.log(result)
                }
            }
        })
    }

    function timestampToTime(timestamp) {
        var date = new Date(timestamp);//时间戳为10位需*1000，时间戳为13位的话不需乘1000
        var Y = date.getFullYear() + '-';
        var M = (date.getMonth() + 1 < 10 ? '0' + (date.getMonth() + 1) : date.getMonth() + 1) + '-';
        var D = date.getDate() < 10 ? '0' + date.getDate() + ' ' : date.getDate() + ' ';
        var h = date.getHours() < 10 ? '0' + date.getHours() + ':' : date.getHours() + ':';
        var m = date.getMinutes() < 10 ? '0' + date.getMinutes() + ':' : date.getMinutes() + ':';
        var s = date.getSeconds() < 10 ? '0' + date.getSeconds() : date.getSeconds();
        return h + m + s;
    }

    function loadLineChart(xAxisData, data) {
        //加载折线图
        var lineChart = echarts.init(document.getElementById("echarts-line-chart"));
        var lineoption = {
            title: {
                text: '近7天的变化'
            },
            tooltip: {
                trigger: 'axis'
            },
            legend: {
                data: ['告警']
            },
            grid: {
                x: 40,
                x2: 40,
                y2: 24
            },
            calculable: true,
            xAxis: [
                {
                    type: 'category',
                    boundaryGap: false,
                    data: xAxisData
                }
            ],
            yAxis: [
                {
                    type: 'value'
                }
            ],
            series: [
                {
                    name: '告警',
                    type: 'line',
                    data: data,
                    markPoint: {
                        data: [
                            {type: 'max', name: '最大值'},
                            {type: 'min', name: '最小值'}
                        ]
                    },
                    markLine: {
                        data: [
                            {type: 'average', name: '平均值'}
                        ]
                    }
                }
            ]
        };
        lineChart.setOption(lineoption, true);
        $(window).resize(lineChart.resize);
    }

